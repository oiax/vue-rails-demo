<div class="page-header">
  <h1>Survey ver. 2</h1>
</div>

<div class="card">
  <div class="card-body">
    <div id="survey-form" v-cloak>
      <%= vue_form_with model: @questionnaire, url: :survey2,
        vue_scope: "user" do |f| %>
        <div class="form-group">
          <%= f.label :name, "お名前" %>
          <%= f.text_field :name, class: "form-control", style: "width: 300px" %>
        </div>
        <div class="form-group">
          <%= f.label :language, "もっとも得意なプログラミング言語" %>
          <div>
            <label>
              <%= f.radio_button :language, "ruby" %> Ruby
            </label>
            <label>
              <%= f.radio_button :language, "php" %> PHP
            </label>
            <label>
              <%= f.radio_button :language, "other" %> その他
            </label>
          </div>
        </div>
        <div class="form-group" v-show="user.language === 'other'">
          <%= f.label :other_language, "（具体的に）" %>
          <%= f.text_field :other_language,
            style: "display: inline; width: auto", class: "form-control" %>
        </div>
        <button type="submit" class="btn btn-primary">送信</button>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_pack_tag "survey2/show" %>
<%= stylesheet_pack_tag "survey2/show" %>
